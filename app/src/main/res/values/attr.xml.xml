<?xml version="1.0" encoding="utf-8"?>
<resources>




    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference" />

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <attr name="indexBarTextSize" format="dimension" />

    <declare-styleable name="IndexBar">
        <attr name="indexBarTextSize" />
        <attr name="indexBarPressBackground" format="color" />
    </declare-styleable>


    <attr name="fontSize36" format="reference|dimension"/>
    <attr name="fontSize30" format="reference|dimension"/>
    <attr name="fontSize25" format="reference|dimension"/>
    <attr name="fontSize24" format="reference|dimension"/>
    <attr name="fontSize20" format="reference|dimension"/>
    <attr name="fontSize18" format="reference|dimension"/>
    <attr name="fontSize16" format="reference|dimension"/>
    <attr name="fontSize15" format="reference|dimension"/>
    <attr name="fontSize14" format="reference|dimension"/>
    <attr name="fontSize12" format="reference|dimension"/>
    <attr name="fontSize10" format="reference|dimension"/>

</resources>
