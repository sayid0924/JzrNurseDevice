<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <include layout="@layout/actionbar_root_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_dbdbdb"
                        android:padding="@dimen/bj_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/bj_25dp"
                            android:text="基本信息"
                            android:textSize="@dimen/wz_18sp" />

                    </RelativeLayout>


                    <LinearLayout style="@style/Patient_deatils_ll">

                        <TextView
                            style="@style/Patient_deatils_tv"
                            android:text="项目名称:  " />

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/Patient_deatils_tv"
                            android:text="" />

                    </LinearLayout>

                    <View style="@style/line_view" />

                    <LinearLayout style="@style/Patient_deatils_ll">

                        <TextView
                            style="@style/Patient_deatils_tv"
                            android:text="教育内容:  " />

                        <TextView
                            android:id="@+id/tv_bed_no"
                            style="@style/Patient_deatils_tv"
                            android:text="" />

                    </LinearLayout>

                    <View style="@style/line_view" />


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_dbdbdb"
                        android:padding="@dimen/bj_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/bj_25dp"
                            android:text="教育形式"
                            android:textSize="@dimen/wz_18sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_45dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/bj_25dp"
                            android:text="书面"
                            android:textColor="@color/color_8a8a8a"
                            android:textSize="@dimen/wz_16sp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/bj_10dp" />


                    </RelativeLayout>


                    <View style="@style/line_view" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_45dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/bj_25dp"
                            android:text="示范"
                            android:textColor="@color/color_8a8a8a"
                            android:textSize="@dimen/wz_16sp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/bj_10dp" />


                    </RelativeLayout>

                    <View style="@style/line_view" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_45dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/bj_25dp"
                            android:text="讲解"
                            android:textColor="@color/color_8a8a8a"
                            android:textSize="@dimen/wz_16sp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/bj_10dp" />

                    </RelativeLayout>

                    <View style="@style/line_view" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_dbdbdb"
                        android:padding="@dimen/bj_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/bj_25dp"
                            android:text="教育对象"
                            android:textSize="@dimen/wz_18sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_45dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/bj_25dp"
                            android:text="病人"
                            android:textColor="@color/color_8a8a8a"
                            android:textSize="@dimen/wz_16sp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/bj_10dp" />

                    </RelativeLayout>

                    <View style="@style/line_view" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_45dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/bj_25dp"
                            android:text="家属"
                            android:textColor="@color/color_8a8a8a"
                            android:textSize="@dimen/wz_16sp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/bj_10dp" />

                    </RelativeLayout>

                    <View style="@style/line_view" />

                    <LinearLayout style="@style/Patient_deatils_ll">

                        <TextView
                            style="@style/Patient_deatils_tv"
                            android:text="教育日期:  " />

                        <TextView
                            android:id="@+id/tv_balence"
                            style="@style/Patient_deatils_tv"
                            android:text="" />

                    </LinearLayout>

                    <View style="@style/line_view" />

                    <LinearLayout style="@style/Patient_deatils_ll">

                        <TextView
                            style="@style/Patient_deatils_tv"
                            android:text="护士签名:  " />

                        <TextView
                            android:id="@+id/tv_charge_days"
                            style="@style/Patient_deatils_tv"
                            android:text="" />

                    </LinearLayout>

                    <View style="@style/line_view" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
