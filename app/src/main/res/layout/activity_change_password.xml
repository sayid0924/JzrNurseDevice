<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar_root_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_45dp"
            android:layout_marginTop="@dimen/bj_10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="原密码"
                android:textSize="@dimen/wz_16sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入原来的登录密码"
                android:text=""
                android:textSize="@dimen/wz_16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_45dp"
            android:layout_marginTop="@dimen/bj_10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="新密码"
                android:textSize="@dimen/wz_16sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入新设置的登录密码"
                android:text=""
                android:textSize="@dimen/wz_16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_45dp"
            android:layout_marginTop="@dimen/bj_10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认密码"
                android:textSize="@dimen/wz_16sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请再次输入新设置的登录密码"
                android:text=""
                android:textSize="@dimen/wz_16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_clecn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginTop="@dimen/bj_50dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:background="@drawable/button_bg"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="@dimen/wz_16sp" />


    </LinearLayout>


</LinearLayout>