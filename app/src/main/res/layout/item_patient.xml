<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/bj_10dp"
    android:layout_marginRight="@dimen/bj_10dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_bed_no"
            android:layout_width="@dimen/bj_80dp"
            android:layout_height="@dimen/bj_80dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_patient_icon"
            android:gravity="center"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bed_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/wz_25sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_deptname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/wz_18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_15dp"
                    android:text=""
                    android:textSize="@dimen/wz_16sp" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textSize="@dimen/wz_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_3dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/tv_cure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住院号:  "
                    android:textSize="@dimen/wz_16sp" />

                <TextView
                    android:id="@+id/tv_cure_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/wz_16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_3dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主治医生:  "
                    android:textSize="@dimen/wz_16sp" />

                <TextView
                    android:id="@+id/tv_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text=""
                    android:textSize="@dimen/wz_16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="护理级别:  "
                    android:textSize="@dimen/wz_16sp" />

                <TextView
                    android:id="@+id/tv_level_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/wz_16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_enjoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入院诊断:  "
                    android:textSize="@dimen/wz_16sp" />

                <TextView
                    android:id="@+id/tv_enjoin_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textSize="@dimen/wz_16sp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:layout_marginTop="@dimen/bj_2dp"
        android:background="@color/color_bfbfbf" />

</LinearLayout>
