                            android:textSize="@dimen/wz_16sp" />

                        <RelativeLayout
                            android:layout_width="@dimen/bj_0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/bj_10dp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_1dp"
                        android:background="#D0D4DB" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_45dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/bj_0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="平车"
                            android:textSize="@dimen/wz_16sp" />

                        <RelativeLayout
                            android:layout_width="@dimen/bj_0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/bj_10dp" />

                        </RelativeLayout>

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_1dp"
                        android:background="#D0D4DB" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_45dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/bj_0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="其他"
                            android:textSize="@dimen/wz_16sp" />

                        <RelativeLayout
                            android:layout_width="@dimen/bj_0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/bj_10dp" />

                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/bt_clecn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/bj_10dp"
                android:background="@drawable/button_bg"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/wz_16sp" />


